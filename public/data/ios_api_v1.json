                        }
                    ]
                },
                {
                    "MethodName": "",
                    "Synopsis": "Get the space resource.",
                    "HTTPMethod": "GET",
                    "URI": "/spaces/:id",
                    "RequiresOAuth": "Y",
                    "parameters": [
                       {
                            "Name": "id",
                            "Required": "Y",
                            "Default": "",
                            "Type": "integer",
                            "Description": "space id"
                        }
                    ]
                }
            ]
        },
