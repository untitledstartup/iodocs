{
    "endpoints": [
        {
            "name": "Assets",
            "methods": [
                {
                    "MethodName": "",
                    "Synopsis": "Upload a file to the server. The returned assets id needs to be sent with the Post form.",
                    "HTTPMethod": "POST",
                    "URI": "/assets",
                    "RequiresOAuth": "Y",
                    "parameters": [
                        {
                            "Name": "user_id",
                            "Required": "Y",
                            "Default": "",
                            "Type": "integer",
                            "Description": "User id of the user that is uploading the asset."
                        },
                        {
                            "Name": "file_name",
                            "Required": "Y",
                            "Default": "",
                            "Type": "string",
                            "Description": "Filename of the assets."
                        },
                        {
                            "Name": "file_data",
                            "Required": "Y",
                            "Default": "",
                            "Type": "integer",
                            "Description": "User id of the user that is uploading the asset."
                        }
                    ]
                },
                {
                    "MethodName": "",
                    "Synopsis": "Delete an assets.",
                    "HTTPMethod": "DELETE",
                    "URI": "/assets/:id",
                    "RequiresOAuth": "Y",
                    "parameters": [
                        {
                            "Name": "id",
                            "Required": "Y",
                            "Default": "",
                            "Type": "integer",
                            "Description": "Id of the Asset to be deleted."
                        }
                    ]
                }
            ]
        },
        {
            "name": "Authentication Token",
            "methods": [
                {
                    "MethodName": "",
                    "Synopsis": "Create an authentication token. Need to pass either the email/password of the user or the Facebook Oauth token.",
                    "HTTPMethod": "POST",
                    "URI": "/auth_token",
                    "RequiresOAuth": "N",
                    "parameters": [
                        {
                            "Name": "email",
                            "Required": "N",
                            "Default": "",
                            "Type": "string",
                            "Description": "email of the user"
                        },
                        {
                            "Name": "password",
                            "Required": "N",
                            "Default": "",
                            "Type": "string",
                            "Description": "email of the user"
                        },
                        {
                            "Name": "facebook_oauth",
                            "Required": "N",
                            "Default": "",
                            "Type": "string",
                            "Description": "The Facebook Oauth 2.0 token"
                        }
                    ]
                },
                {
                    "MethodName": "",
                    "Synopsis": "Log out a user by deleting the associated authentication token",
                    "HTTPMethod": "DELETE",
                    "URI": "/auth_token/:auth_token",
                    "parameters": [
                        {
                            "Name": "auth_token",
                            "Required": "Y",
                            "Default": "",
                            "Type": "string",
                            "Description": "current user's auth token"
                        }
                    ]
                }
            ]
        },
        {
            "name": "Cheer",
            "methods": [
                {
                    "MethodName": "",
                    "Synopsis": "Cheer a post or a post comment.",
                    "HTTPMethod": "POST",
                    "URI": "/cheers",
                    "RequiresOAuth": "Y",
                    "parameters": [
                        {
                            "Name": "user_id",
                            "Required": "Y",
                            "Default": "",
                            "Type": "integer",
                            "Description": "User id of the user that is cheering."
                        },
                        {
                            "Name": "cheerable_id",
                            "Required": "Y",
                            "Default": "",
                            "Type": "integer",
                            "Description": "Id of the object the user wants to cheer."
                        },
                        {
                            "Name": "cheerable_type",
                            "Required": "Y",
                            "Default": "",
                            "Type": "enumerated",
                            "EnumeratedList":["post", "comment"],
                            "Description": "Type of the object the user wants to cheer."
                        }
                    ]
                }
            ]
        },
        {
            "name": "Invite",
            "methods": [
                {
                    "MethodName": "",
                    "Synopsis": "Creates a list of invites given a list of contacts. Contacts can be Mightybell users or external (Facebook, Gmail, Yahoo! Mail",
                    "HTTPMethod": "POST",
                    "URI": "/invites",
                    "RequiresOAuth": "Y",
                    "parameters": [
                        {
                            "Name": "user_id",
                            "Required": "Y",
                            "Default": "",
                            "Type": "integer",
                            "Description": "User id of the user thats sending the invites."
                        },

                        {
                            "Name": "space_id",
                            "Required": "Y",
                            "Default": "",
                            "Type": "integer",
                            "Description": "Space id of the space the contacts are invited to."
                        },
                        {
                            "Name": "message",
                            "Required": "N",
                            "Default": "",
                            "Type": "string",
                            "Description": "Filename of the assets."
                        },
                        {
                            "Name": "contacts",
                            "Required": "Y",
                            "Default": "",
                            "Type": "array",
                            "Description": "Array of contact objects { :user_id, :name, :email }"
                        }
                    ]
                },
                {
                    "MethodName": "",
                    "Synopsis": "Allows the user to accept an invitation. The user will need to sign in/sign up.",
                    "HTTPMethod": "POST",
                    "URI": "/invites/:token/accept",
                    "RequiresOAuth": "Y",
                    "parameters": [
                        {
                            "Name": "token",
                            "Required": "Y",
                            "Default": "",
                            "Type": "string",
                            "Description": "Unique token from the redirect link."
                        }
                    ]
                }
            ]
        },
        {
            "name": "Post",
            "methods": [
                {
                    "MethodName": "",
                    "Synopsis": "",
                    "HTTPMethod": "GET",
                    "URI": "/spaces/:space_id/posts",
                    "RequiresOAuth": "Y",
                    "parameters": [
                        {
                            "Name": "space_id",
                            "Required": "Y",
                            "Default": "",
                            "Type": "integer",
                            "Description": "Space id of the space that contains the posts."
                        },
                        {
                            "Name": "page",
                            "Required": "N",
                            "Default": "1",
                            "Type": "integer",
                            "Description": "Page number."
                        },
                        {
                            "Name": "per_page",
                            "Required": "N",
                            "Default": "25",
                            "Type": "integer",
                            "Description": "Number of posts per page."
                        }
                    ]
                },
                {
                    "MethodName": "",
                    "Synopsis": "",
                    "HTTPMethod": "GET",
                    "URI": "/spaces/:space_id/posts/:id",
                    "RequiresOAuth": "Y",
                    "parameters": [
                        {
                            "Name": "space_id",
                            "Required": "Y",
                            "Default": "",
                            "Type": "integer",
                            "Description": "Space id of the space that contains the posts."
                        },
                        {
                            "Name": "id",
                            "Required": "Y",
                            "Default": "",
                            "Type": "integer",
                            "Description": "Post id of the post."
                        }
                    ]
                },
                {
                    "MethodName": "",
                    "Synopsis": "",
                    "HTTPMethod": "POST",
                    "URI": "/spaces/:space_id/posts",
                    "RequiresOAuth": "Y",
                    "parameters": [
                        {
                            "Name": "space_id",
                            "Required": "Y",
                            "Default": "",
                            "Type": "integer",
                            "Description": "Space id of the space that contains the posts."
                        },
                        {
                            "Name": "title",
                            "Required": "Y",
                            "Default": "",
                            "Type": "integer",
                            "Description": "Title of the post."
                        },
                        {
                            "Name": "body",
                            "Required": "N",
                            "Default": "",
                            "Type": "integer",
                            "Description": "Body of the post."
                        },
                        {
                            "Name": "asset_id",
                            "Required": "N",
                            "Default": "",
                            "Type": "integer",
                            "Description": "Image/file attachment id"
                        }
                    ]
                }
            ]
        },
        {
            "name": "Post Comment",
            "methods": [
                {
                    "MethodName": "",
