        },
        {
            "name": "Space",
            "methods": [
                {
                    "MethodName": "",
                    "Synopsis": "Returns a list of recommended spaces. When the user is signed in the returned spaces are tailored to the user.",
                    "HTTPMethod": "GET",
                    "URI": "/spaces/recommended",
                    "RequiresOAuth": "N",
                    "parameters": [
                        {
                            "Name": "page",
                            "Required": "N",
                            "Default": "1",
                            "Type": "integer",
                            "Description": ""
                        },
                        {
                            "Name": "per_page",
                            "Required": "N",
                            "Default": "25",
                            "Type": "integer",
                            "Description": "number of spaces returned per page."
                        }
                    ]
                },
                {
                    "MethodName": "",
                    "Synopsis": "Search public spaces.",
                    "HTTPMethod": "GET",
                    "URI": "/explore/spaces/search",
                    "RequiresOAuth": "N",
                    "parameters": [
                       {
                            "Name": "term",
                            "Required": "Y",
                            "Default": "",
                            "Type": "string",
                            "Description": "search term"
                        },
                        {
                            "Name": "page",
                            "Required": "N",
                            "Default": "1",
                            "Type": "integer",
                            "Description": ""
                        },
                        {
                            "Name": "per_page",
                            "Required": "N",
                            "Default": "25",
                            "Type": "integer",
                            "Description": "number of spaces returned per page."
                        }
                    ]
                },
                {
                    "MethodName": "",
                    "Synopsis": "Create a new space.",
                    "HTTPMethod": "POST",
                    "URI": "/spaces",
                    "RequiresOAuth": "Y",
                    "parameters": [
                       {
                            "Name": "title",
                            "Required": "Y",
                            "Default": "",
